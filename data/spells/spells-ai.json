        {
            "name": "巧舌如簧",
            "ENG_name": "Gift of Gab",
            "source": "AI",
            "page": 76,
            "level": 2,
            "school": "E",
            "time": [
                {
                    "number": 1,
                    "unit": "reaction",
                    "condition": "當你與另一個生物說話時採取"
                }
            ],
            "range": {
                "type": "point",
                "distance": {
